{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020", "DOM"],
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
	"baseUrl": "../..",
	"paths": {
		"@shared/*": ["shared/*"],
		"@features/*": ["features/*"],
		"@types/*": ["types/*"]
	}
	},
	"include": ["**/*.ts", "**/*.tsx"]
}
